    {
      "parameters": {
        "operation": "executeQuery",
        "query": "WITH nivel_destino AS (\n  SELECT jn.*\n  FROM public.jornada_niveis jn\n  WHERE jn.xp_minimo <= $2::int\n    AND ($2::int < COALESCE(jn.xp_proximo_nivel, $2::int + 1))\n  ORDER BY jn.nivel DESC\n  LIMIT 1\n)\nUPDATE public.resumo_jornada r\nSET\n  nivel_atual      = COALESCE(nivel_destino.nivel, r.nivel_atual),\n  titulo_nivel     = COALESCE(nivel_destino.nome, r.titulo_nivel),\n  xp_proximo_nivel = COALESCE(nivel_destino.xp_proximo_nivel, r.xp_proximo_nivel),\n  atualizado_em    = NOW()\nFROM nivel_destino\nWHERE r.usuario_id = $1::uuid\nRETURNING r.usuario_id, r.nivel_atual, r.titulo_nivel, r.xp_proximo_nivel;\n",
        "options": {
          "queryReplacement": "={{ [$json.usuario_id, $json.xp_total || 0] }}"
        }
      },
